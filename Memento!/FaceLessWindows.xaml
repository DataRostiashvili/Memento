<Window x:Class="Memento_.FaceLessWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memento_"
        mc:Ignorable="d"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Topmost="True"
        Title="" MinHeight="200" MinWidth="400" MaxHeight="200" MaxWidth="400">
    <Window.Background>
        <SolidColorBrush Opacity="0" Color="Transparent"></SolidColorBrush>
    </Window.Background>
    <Grid>
        
        <TextBlock Background="Transparent" x:Name="mainTextBox" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="60" >
            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="color1" Storyboard.TargetProperty="Offset" From="0" To=".47" AutoReverse="True" RepeatBehavior="Forever"
                                             Duration="0:0:2" />
                            <DoubleAnimation Storyboard.TargetName="color2" Storyboard.TargetProperty="Offset" From=".471" To=".498" AutoReverse="True" RepeatBehavior="Forever"
                                             Duration="0:0:2" />
                            <DoubleAnimation Storyboard.TargetName="color3" Storyboard.TargetProperty="Offset" From=".499" To=".522" AutoReverse="True" RepeatBehavior="Forever"
                                             Duration="0:0:2" />
                            <DoubleAnimation Storyboard.TargetName="color4" Storyboard.TargetProperty="Offset" From=".5223" To="1" AutoReverse="True" RepeatBehavior="Forever"
                                             Duration="0:0:2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
            <TextBlock.Foreground>
                <LinearGradientBrush>
                    <GradientStop x:Name="color1" Offset="0" Color="Red"></GradientStop>
                    <GradientStop x:Name="color2" Offset=".5" Color="AliceBlue"></GradientStop>
                    <GradientStop x:Name="color3" Offset=".5" Color="Beige"></GradientStop>
                    <GradientStop x:Name="color4" Offset="1" Color="Black"></GradientStop>
                </LinearGradientBrush>
            </TextBlock.Foreground>
            Xamarin
        </TextBlock>
    </Grid>
</Window>
